# ============================================
# Configurações do Banco de Dados
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mango_farm_monitor
POSTGRES_PORT=5432

# URL completa do banco de dados (usado pela aplicação)
# Para desenvolvimento local:
DATABASE_URL=postgresql://postgres:postgres@db:5432/mango_farm_monitor
DEBUG=false
# Ajoute ton IP Azure ici pour autoriser les requêtes
CORS_ORIGINS=http://localhost,http://74.249.0.141

# Para Docker Compose:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/mango_farm_monitor

# ============================================
# Configurações da API
# ============================================
API_PORT=8000

# ============================================
# Segurança
# ============================================
# Gere uma chave secreta forte para produção!
# Exemplo: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Aplicação
# ============================================
DEBUG=false
ENVIRONMENT=production

# Para desenvolvimento, use:
# DEBUG=true
# ENVIRONMENT=development

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# URLs permitidas para fazer requisições à API
# Separe múltiplas URLs por vírgula
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
